#messageBar
  width 760px
  clear: both
  position: relative

  button[name=messageSubmit]
    position: absolute
    right 0
    top 0

  input[name=messageBarInput]
    width 100%
    position: absolute
    left 0
    top 0

#sessionPlaylist
  width: 200px
  height: 290px
  background-color: #dddddd
  overflow: hidden
  border: 1px solid #666666
  position: relative

#sessionPlaylistBox
  position: absolute
  top: 0px
  left: 0px
  -webkit-transition: top 0.25s ease-in-out
  -moz-transition: top 0.25s ease-in-out
  -ms-transition: top 0.25s ease-in-out
  -o-transition: top 0.25s ease-in-out
  transition: top 0.25s ease-in-out


//  No longer needed
#upNextPlayingBox
  width: 198px
  height: 55px
  position: absolute
  background-color: darkblue
  opacity: 0.3
  top 1
  left 1
  z-index 100

.item
  padding: 5px
  width: 189px
  height: 66px
  margin: 5px 0px 5px 5px
  background-color: #999
  font-size: 12px
  white-space: nowrap
  overflow: hidden
  display: block
  position:  relative
  color: #eeeeee

  .itemTitle
    margin-top: 20px
    padding-left: 5px
    color: white
    display: block
    font-weight: bold

  .links
    display: block
    float: right

    a
      color: #eee
      margin-left: 10px
      font-style: bold


  .stats
    position: absolute
    right: 5px
    bottom:5px

div.seeding
  background-color: #2f612a

div.downloading
  background-color: darkslategrey

div.added
  background-color: gray

div.nowPlaying
  background-color: #0371a8 !important


.sortable-ghost
  background-color purple
  opacity 0.4

.sortable-chosen
  background-color purple

.sortable-drag
  background-color purple


.hidden
  display: none

.songName
  padding-left: 10px
  color: lightslategray
  font-style: italic


h3.nowPlaying
  color: red
  font-family: monospace

.upNext
  float right
  padding-right 20px
  color: darkred

footer
  margin: 20px 0
  font-size: 0.8em
  color: $color-secondary

#sessionPlayer
  width: 560px
  height: 290px
  background-color: black
  background-image: url("not-loaded.png")
  background-repeat no-repeat
  float: left
  background-position center

  audio, video, img
    display: block
    max-width: 560px
    max-height: 290px
    background-color: black
    width: 100%
    height: 100%

#sessionPlayer.loaded
  background-image: url('audio.gif')
  background-color: white


